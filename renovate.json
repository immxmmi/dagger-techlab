{
  "extends": [
    "config:recommended"
  ],
  "ignorePaths": [
    "**/mod/**"
  ],
  "prConcurrentLimit": 4,
  "packageRules": [
    {
      "matchDepTypes": [
        "devDependencies"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true,
      "matchPackageNames": [
        "/husky/",
        "/markdownlint-cli/"
      ]
    },
    {
      "matchDatasources": [
        "docker"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true,
      "matchPackageNames": [
        "/floryn90/hugo/",
        "/nginxinc/nginx-unprivileged/"
      ]
    },
    {
      "matchDatasources": [
        "golang-version"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    },
    {
      "matchDepTypes": [
        "action"
      ],
      "matchDatasources": [
        "github-tags"
      ],
      "matchUpdateTypes": [
        "minor",
        "patch"
      ],
      "automerge": true
    },
    {
      "matchManagers": [
        "gomod"
      ],
      "matchDepTypes": [
        "indirect"
      ],
      "enabled": true,
      "automerge": false
    }
  ]
}
